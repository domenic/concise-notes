<article class="archive-article archive-type-<%= post.layout %><%= home ? ' article-list-part' : '' %>">
  <div class="archive-article-inner">
    <header class="archive-article-header">
      <%- partial('post/date', {class_name: 'archive-article-date blue-grey darken-1 white-text', date_format: 'MMM D'}) %>
      <%- partial('post/list-title') %>
    </header>
  </div>
  <p>
    <a class="article-description-link" href="<%- url_for(post.path) %>">
      <%= post.description %>
    </a>
  </p>
</article>
