<a href="<%- url_for(post.path) %>" class="<%= class_name %>">
  <time datetime="<%= date_xml(post.date) %>" itemprop="datePublished"><%= date(post.date, date_format) %></time>
  <% if (post.modified){ %>
    <time class="hide" datetime="<%= date_xml(post.modified) %>" itemprop="dateModified"><%= date(post.modified, date_format) %></time>
  <% } else { %>
    <time class="hide" datetime="<%= date_xml(post.date) %>" itemprop="dateModified"><%= date(post.date, date_format) %></time>
  <% } %>
</a>
