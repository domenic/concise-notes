.article
  padding: 20px 50px 5px 50px
  font-size: 16px
  background-color: #fffff
  sides-shadow()
  top-and-sides-shadow()

.article-header
  h1
    margin: 0rem 0 1.68rem 0

.article-title
  margin-top: 0
  font-size: 3.56rem

.article-entry
  ul, ul li
    list-style-type: disc !important
    margin-left: 10px

.article-share-box
  position: absolute
  display: none
  background: #fff
  box-shadow: 1px 2px 10px rgba(0, 0, 0, 0.2)
  border-radius: 3px
  margin-left: -145px
  overflow: hidden
  z-index: 1
  &.article-share-box-opened
    display: block

.article-share-input
  border: none
  width: 100% !important
  background: none !important
  padding: 0 15px !important
  outline: none !important
  height: 36px !important
  line-height: 36px !important
  font-size: 10px !important
  margin: 0 !important
  border-bottom: none !important

.article-share-link
  cursor: pointer
  &:before
    font-size: 14px
    margin-right: 5px
    font-family: font-icon
    content: '\f064'

.article-suggest-modification
  &:after
    font-size: 14px
    margin-left: 5px
    font-family: font-icon
    content: '\f040'

.article-share-links
  clearfix()
  height: 50px
  border-top: 1px solid link-color

$article-share-link
  width: 50px
  height: 75px
  display: block
  float: left
  position: relative
  color: #999
  text-shadow: 0 1px #fff
  &:before
    font-size: 20px
    font-family: font-icon
    absolute-center(@font-size)
    text-align: center
  &:hover
    color: #fff

.article-share-twitter
  @extend $article-share-link
  &:before
    content: "\f099"
  &:hover
    background: color-twitter
    text-shadow: 0 1px darken(color-twitter, 20%)

.article-share-facebook
  @extend $article-share-link
  &:before
    content: "\f09a"
  &:hover
    background: color-facebook
    text-shadow: 0 1px darken(color-facebook, 20%)

.article-share-pinterest
  @extend $article-share-link
  &:before
    content: "\f0d2"
  &:hover
    background: color-pinterest
    text-shadow: 0 1px darken(color-pinterest, 20%)

.article-share-google
  @extend $article-share-link
  &:before
    content: "\f0d5"
  &:hover
    background: color-google
    text-shadow: 0 1px darken(color-google, 20%)

.post-nav-title
  padding: 10px
  min-width: 75px

.post-nav-content
  border-top: 2px solid #546e7a
  margin-top: 0
  padding-top: 10px
  a
    font-size: 1.2rem

.article-tag-list-link
  &:before
    content: '#'

.article-footer
  .row
    margin-bottom: 0

.article-footer-right
  margin-top: 16px

.article-list-part
  padding-bottom: 10px
  margin-bottom: 30px
  background-color: #fff

  .article-footer
    border-top: 1px solid rgba(100, 100, 100, 0.5);

blockquote
  border-left: 5px solid link-color
  font-style: italic
